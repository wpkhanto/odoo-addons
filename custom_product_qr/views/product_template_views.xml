<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_qr" model="ir.ui.view">
        <field name="name">product.template.form.qr</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group" position="inside">
                <group>
                    <field name="qr_code" widget="image" class="oe_avatar" options="{'size': (128, 128)}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
